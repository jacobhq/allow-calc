{
  "name": "Hegarty Allow Calculator",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Always allow calculator on hegartymaths.",
  "homepage_url": "http://jacobhq.xyz",
  "icons": { "16": "press-icon_16x16.png", "48": "press-icon_48x48.png", "128": "press-icon_128x128.png" },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
      {
        "matches": ["*://hegartymaths.com/assessment"],
        "js": ["inject.js"]
      }
  ],
  "browser_action": {
    "default_title": "Enable calculator | Hegarty"
  },
  "permissions": [
    "activeTab",
    "*://hegartymaths.com/assessment"
  ]
}
